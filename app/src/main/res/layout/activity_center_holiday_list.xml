<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.CenterHolidayListActivity.CenterHolidayListActivity"
    android:orientation="vertical"
    android:background="@drawable/bgholiday">

<include
    layout="@layout/toolbar_with_backbutton"
    ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_30sdp"
        android:paddingTop="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Holiday Name"
            android:fontFamily="@font/rockfont"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/text_color_blue"
            >

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date"
            android:fontFamily="@font/rockfont"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/text_color_blue"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="@dimen/_25sdp"
            >

        </TextView>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvidholidaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <include
        layout="@layout/spinkitview_progress_layout"
        >
    </include>

    <include
        layout="@layout/nodatafound_layout"
        >

    </include></LinearLayout>