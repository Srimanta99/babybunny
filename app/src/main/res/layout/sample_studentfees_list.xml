<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/studentbgwhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/teacher_image"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="123dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_launcher_background"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/student_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunita Chowdhury"
                            android:textColor="#2C274F"
                            android:textSize="18sp"
                            android:fontFamily="@font/rockfont"
                            android:layout_marginTop="@dimen/_12sdp">

                        >

                        </TextView>
                        <TextView
                            android:id="@+id/student_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(BBT23097)"
                            android:textColor="#827f94"
                            android:textSize="12sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:gravity="right"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginRight="@dimen/_10sdp">
        >
        <LinearLayout
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@drawable/green_capsul_bg"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Paid"
                android:fontFamily="@font/rockfont"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="10sp">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:layout_marginBottom="@dimen/_2sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purpose : "
                            android:textColor="#2C274F"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/type_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="chowdhury.codopoliz@gmail.com"
                            android:textColor="#827f94"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount : "
                            android:textColor="#2C274F"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/fees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8777069940"
                            android:textColor="#827f94"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date : "
                            android:textColor="#2C274F"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/fees_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8777069940"
                            android:textColor="#827f94"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/studentbggrey">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >




                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_30sdp"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class : "
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#f52346"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/class_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Toddler"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >




                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>