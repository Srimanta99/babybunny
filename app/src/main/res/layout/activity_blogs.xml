<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.BlogsActivity.BlogsActivity"
    android:orientation="vertical"
    android:background="@drawable/loginasbg"
    >





    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/whitecapsuleshape"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/_20sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:id="@+id/back_icon"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/backbuttn"
                    >

                </ImageView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/etphnoid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/rockfont"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:text="Blogs"
                        android:textColor="#2C274F"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">


            <LinearLayout
                android:id="@+id/lvpreschoolid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="255"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blogsbannerone"
                        android:scaleType="fitXY"
                        >

                    </ImageView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@drawable/halfwhitebg"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Why Preschool is so important"
                        android:textColor="#2C274F"
                        android:fontFamily="@font/rockfont"
                        android:layout_marginTop="10dp"
                       android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        >

                    </TextView>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="@dimen/_2sdp"
                      android:background="@drawable/bluecapsulshapebutton"
                      android:layout_marginRight="@dimen/_95sdp"
                      android:layout_marginLeft="@dimen/_95sdp"
                      android:layout_marginTop="10dp"
                      >

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Read more"
                          android:textColor="#fff"
                          android:fontFamily="@font/rockfont"
                        android:layout_gravity="center"
                          android:gravity="center"
                          >

                      </TextView>
                  </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="255"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blogsbannertwo"
                        android:scaleType="fitXY"
                        >

                    </ImageView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@drawable/halfwhitebg"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Building sharing habits in your kids"
                        android:textColor="#2C274F"
                        android:fontFamily="@font/rockfont"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_15sdp"
                        >

                    </TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:background="@drawable/bluecapsulshapebutton"
                        android:layout_marginRight="@dimen/_95sdp"
                        android:layout_marginLeft="@dimen/_95sdp"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Read more"
                            android:textColor="#fff"
                            android:fontFamily="@font/rockfont"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="255"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blogbannerthree"
                        android:scaleType="fitXY"
                        >

                    </ImageView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:background="@drawable/halfwhitebg"
                    android:orientation="vertical"
                    >

                  <!--  <TextView
