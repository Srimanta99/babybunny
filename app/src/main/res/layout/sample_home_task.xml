<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/studentbgwhite"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pink_bg">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:paddingBottom="@dimen/_4sdp"
                            android:paddingTop="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:layout_gravity="right"
                                android:gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Class Name : "
                                    android:textSize="12sp"
                                    android:textColor="@color/text_color_red"
                                    android:fontFamily="@font/rockfont"
                                    >

                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/class_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="kg"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_color_blue"
                                    android:fontFamily="@font/rockfont"
                                    >

                                </TextView>
                            </LinearLayout>



                        </LinearLayout>




                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/redcapsulshapebutton"
                    android:layout_marginTop="@dimen/_5sdp"
                    >

                </ImageView>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Home Work"
                      android:textSize="12sp"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:textColor="@color/text_color_red"
                      android:fontFamily="@font/rockfont"
                      android:paddingLeft="@dimen/_4sdp">

                  </TextView>

                <TextView
                    android:id="@+id/homework_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Work"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/rockfont"
                    android:paddingLeft="@dimen/_5sdp">

                </TextView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#34000000"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                >

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_18sdp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_5sdp"
                >

                <ImageView
                    android:layout_width="@dimen/_6sdp"
                    android:layout_height="@dimen/_6sdp"
                    android:background="@drawable/redcapsulshapebutton"
                    android:layout_marginTop="@dimen/_5sdp"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="12sp"
                    android:gravity="center|top"
                    android:layout_gravity="center|top"
                    android:textColor="@color/text_color_red"
                    android:fontFamily="@font/rockfont"
                    android:paddingLeft="@dimen/_4sdp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/homework_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunita Williams was born in Euclid, Ohio, to Indian American neuroanato"
                        android:textSize="12sp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:fontFamily="@font/rockfont"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingRight="@dimen/_18sdp">

                    </TextView>
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/teacherbggrey">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/teacher_image"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_launcher_background"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Teacher's name"
                            android:textSize="12sp"
                            android:textColor="@color/text_color_red"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/teacher_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunita Chowdhury"
                            android:textSize="11sp"
                            android:textColor="@color/text_color_blue"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:paddingRight="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">


                        <TextView
                            android:id="@+id/teacher_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16.10.1998"
                            android:gravity="center|right"
                            android:layout_gravity="center|right"
                            android:textSize="12sp"
                            android:textColor="@color/text_color_light_grey"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>