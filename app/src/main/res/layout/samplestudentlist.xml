<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/studentbgwhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/student_image"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="123dp"
                            android:src="@drawable/ic_launcher_background"
                            android:paddingTop="9dp"
                            android:paddingBottom="9dp"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/student_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sunita Chowdhury"
                            android:textColor="#2C274F"
                            android:textSize="16sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/student_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(BBT23097)"
                            android:textColor="#827f94"
                            android:textSize="11sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardian name : "
                            android:textColor="#2C274F"
                            android:textSize="11sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/guardian_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sunita chowdhury"
                            android:textColor="#827f94"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="1dp"
                       >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email id : "
                            android:textColor="#2C274F"
                            android:textSize="11sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="chowdhury.codopoliz@gmail.com"
                            android:textColor="#827f94"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="1dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact : "
                            android:textColor="#2C274F"
                            android:textSize="11sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                        <TextView
                            android:id="@+id/mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8777069940"
                            android:textColor="#827f94"
                            android:textSize="10sp"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/studentbggrey">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Class"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#f52346"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/rockfont"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/class_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#2C274F"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/rockfont"
                        >

                    </TextView>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#34000000"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="8dp"
                    >

                </View>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blood group"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#f52346"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/rockfont"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/blood_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AB+"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#2C274F"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/rockfont"
                        >

                    </TextView>

                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#34000000"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="8dp"
                    >

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#f52346"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/rockfont"
                        >

                    </TextView>

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16.10.1998"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="#2C274F"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/rockfont"
                        >

                    </TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>