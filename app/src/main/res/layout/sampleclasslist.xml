<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="15sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/studentbgwhite"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Name : "
                            android:textSize="15sp"
                            android:textColor="#2C274F"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/class_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textSize="15sp"
                            android:textColor="#827f94"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/studentbggrey">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/_4sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Admission Fee  "
                            android:textSize="12sp"
                            android:textColor="#f52346"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/admission_fees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AB+"
                            android:textSize="11sp"
                            android:textColor="#2C274F"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>



                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#34000000"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="5dp"
                    >

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/_7sdp"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly fee "
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="#f52346"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/monthly_fees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="16.10.1998"
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:textColor="#2C274F"
                            android:fontFamily="@font/rockfont"
                            >

                        </TextView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>